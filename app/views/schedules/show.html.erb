<% provide :title, @schedule.title %>
<div>   
  <h1>Title event: <%= @schedule.title %></h1>
  <p>Description: <%= @schedule.description %></p>
  <p>From: <%= @schedule.start_time %> to: <%= @schedule.finish_time %></p>
  <p>Created by: <%= @schedule.user.name %></p>
  <p>Member:
    <% @schedule.members.each do |member| %>
      <%= member.name %>,
    <% end %> 
  </p>     
</div>
<div class="form-actions">
  <%= link_to 'Back', root_url, class: "btn btn-primary" %>
  <% if can? :edit, @schedule %>
    <%= link_to 'Edit', edit_schedule_path(@schedule), class: "btn btn-primary" %>
  <% end %>  
  <% if can? :destroy, @schedule %>
    <%= link_to 'Delete', schedule_path(@schedule), method: 'delete', confirm: 'Are you sure?', class: 'btn btn-danger' %>
  <% end %>  
</div>
