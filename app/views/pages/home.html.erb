<% provide :title, t('pages.home.title') %>

<% if user_signed_in? %>
  <% content_for :btn_new_schedule do %>
    <%= link_to_if(can?(:create, Schedule), t('pages.home.create_event'), new_schedule_path, class: "btn btn-primary"){} %>
  <% end %>
<% end %>

<% content_for :today_schedules do %>
  <% if user_signed_in? %>
    <div class="containers">
      <div class="today_schedules">
        <h3><%= t('pages.home.schedules_today') %></h3>
        <ul>
          <%= render @today_schedules %>
        </ul>
      </div>
    </div>
  <% end %>
<% end %>

<% if user_signed_in? %>
  <div id='calendar'></div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t('pages.home.welcome_framgia') %></h1>
    <%= link_to t('pages.home.sign_up_now'), new_user_registration_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>

<% content_for :modal_form do %>
  <%= render 'shared/modal_form' if current_user %>
<% end %>
